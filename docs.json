{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Payingame",
  "colors": {
    "primary": "#111112",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "appearance": {
    "default": "dark"
  },
  "favicon": "/favicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "payingame/gettingstarted/subscribe",
              "payingame/gettingstarted/testvsproduction",
              "payingame/gettingstarted/apikeys"
            ]
          },
          {
            "group": "Projects",
            "pages": [
              "payingame/projects/createproject",
              "payingame/projects/editproject"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Endpoints available",
            "pages": [
              "api-reference/endpoint/projects",
              "api-reference/endpoint/products",
              "api-reference/endpoint/prices",
              "api-reference/endpoint/languages",
              "api-reference/endpoint/receipts",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "X",
          "href": "https://x.com/PAYINGAME01",
          "icon": "x-twitter"
        },
        {
          "anchor": "Videos",
          "href": "https://mintlify.com/blog",
          "icon": "youtube"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/lightp.svg",
    "dark": "/logo/darkp.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@payingame.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "To Site",
      "href": "https://payingame.io"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
